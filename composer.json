{
    "name": "akeneo/nelson",
    "type": "project",
    "description": "Command based translation workflow between Crowdin and Github",
    "tags": ["Crowdin", "Github", "Collaborative", "Translation", "Workflow"],
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Nicolas Dupont",
            "email": "nicolas@akeneo.com"
        },
        {
            "name": "Pierre Allard",
            "email": "pierre.allard@akeneo.com"
        },
        {
            "name": "JM Leroux",
            "email": "jean-marie.leroux@akeneo.com"
        }
    ],
    "require": {
        "php": "8.*",
        "ext-simplexml": "*",
        "ext-zip": "*",
        "symfony/console": "2.7.3",
        "symfony/yaml": "2.7.3",
        "symfony/finder": "2.7.3",
        "symfony/config": "^2.7",
        "monolog/monolog": "~1.0",
        "akeneo/crowdin-api": "1.0.0-alpha7",
        "knplabs/github-api": "1.4.14",
        "symfony/dependency-injection": "^2.7",
        "symfony/translation": "^2.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "@stable",
        "phpspec/phpspec": "@stable",
        "phpstan/phpstan": "@stable",
        "phpstan/phpstan-deprecation-rules": "@stable",
        "symfony/phpunit-bridge": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Akeneo\\": "src/",
            "spec\\Akeneo\\": "spec/Akeneo"
        }
    },
    "autoload-dev": {
        "psr-4": {"Tests\\Akeneo\\": "tests/Akeneo/"}
    }
}
